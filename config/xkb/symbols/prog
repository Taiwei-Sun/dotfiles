partial alphanumeric_keys
xkb_symbols "progmap" {
    replace key <BKSL>  { [ plus,   asterisk, asciicircum,  dead_macron ] };
    replace key <AC11>  { [ dead_acute, grave, dead_diaeresis, dead_diaeresis] };
    replace key <AD11>  { type[Group1]="TWO_LEVEL", symbols[Group1]=[ bracketleft, braceleft] };
    replace key <AD12>  { type[Group1]="TWO_LEVEL", symbols[Group1]=[ bracketright, braceright] };
};

partial modifier_keys
xkb_symbols "lctrl_lalt" {
    replace key <LCTL> { [ Alt_L, Meta_L ] };
    modifier_map Mod1    { <LCTL> };
};

partial modifier_keys
xkb_symbols "lalt_esc" {
    replace key <LALT> { [ Escape ] };
};

partial modifier_keys
xkb_symbols "rctrl_esc" {
	replace key <RCTL> { [Escape] };
};

partial modifier_keys
xkb_symbols "rwin_esc" {
	replace key <RWIN> { [Escape] };
};

